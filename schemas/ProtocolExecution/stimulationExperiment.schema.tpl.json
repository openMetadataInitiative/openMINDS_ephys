{
    "_type": "https://openminds.ebrains.eu/ephys/StimulationExperiment",
    "_extends": "https://openminds.ebrains.eu/core/ProtocolExecution",
    "required": [
        "input",
        "output",
        "stimulationDevice",
        "aquisitionDevice",
        "stimulus"
    ],
    "properties": {
        "internalIdentifier": {
            "type": "string",
            "_instruction": "Laboratory identifier of the experiment"
        },
        "stimulationDevice": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "_instruction": "Device used for stimulation",
            "linkedTypes": [
                "https://openminds.ebrains.eu/ephys/Device",
                "https://openminds.ebrains.eu/ephys/Pipette",
                "https://openminds.ebrains.eu/ephys/ElectrodeArray",
                "https://openminds.ebrains.eu/ephys/Electrode"
            ]
        },
        "aquisitionDevice": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "_instruction": "Devices used for data collection (e.g. amplifier)",
            "linkedTypes": [
                "https://openminds.ebrains.eu/ephys/Device",
                "https://openminds.ebrains.eu/ephys/Pipette",
                "https://openminds.ebrains.eu/ephys/ElectrodeArray",
                "https://openminds.ebrains.eu/ephys/Electrode"
            ]
        },
        "targetHoldingPotential": {
            "_instruction": "Target holding potential of patched cell",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/QuantitativeValue",
                "https://openminds.ebrains.eu/core/QuantitativeValueRange"
            ]
        },
        "input": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "_instruction": "Add all input (tissue sample state, cell state, subject state and patched cells) used by this stimulation experiment.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/ephys/CellState",
                "https://openminds.ebrains.eu/ephys/PatchedCell",
                "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                "https://openminds.ebrains.eu/core/TissueSampleState",
                "https://openminds.ebrains.eu/core/SubjectGroupState",
                "https://openminds.ebrains.eu/core/SubjectState"
            ]
        },
        "output": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "_instruction": "Add all outputs recrdings generated by this stimulation experiment.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/ephys/Recording"
            ],
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/ephys/Measurement"
            ]
        },
        "compensationCurrent": {
            "_instruction": "Compensation current for series resistance",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/ephys/Measurement"
            ]
        },
        "measuredHoldingPotential": {
            "_instruction": "Measured holding potential of patched cell",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/ephys/Measurement"
            ]
        },
        "seriesResistance": {
            "_instruction": "Series resistance compensation while patching cell.",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/ephys/Measurement"
            ]
        },
        "inputResistance": {
            "_instruction": "Input resistance of patched cell",
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/ephys/Measurement"
            ]
        },
        "stimulus": {
            "_instruction": "Stimulus used in the stimulation experiment.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/core/Stimulation"
            ]
        }
    }
}